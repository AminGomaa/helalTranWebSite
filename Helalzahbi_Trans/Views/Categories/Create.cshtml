
@model Helalzahbi_Trans.Models.Category

@{
    ViewBag.Title = "انشاء خدمة جديدة";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>خدمة جديدة</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
   
    <div class="form-horizontal" align=right dir=rtl>
        <h4>الخدمات</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group" align=right dir=rtl>

            <div class="col-md-10">
                @Html.EditorFor(model => model.categName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.categName, "", new { @class = "text-danger" })
            </div>
            @Html.LabelFor(model => model.categName, htmlAttributes: new { @class = "control-label col-md-1" })
        </div>


        <div class="form-group" align="left">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="انشاء خدمة جديدة" class="btn btn-default" />
            </div>
        </div>
    </div>
    }

    <div class="form-group" align="left">
        @Html.ActionLink("عودة للصفحة السابقة", "Index")
    </div>

