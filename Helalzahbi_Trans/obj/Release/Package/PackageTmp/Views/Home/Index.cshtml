@model IEnumerable<Helalzahbi_Trans.Models.Category>
@{
                /**/

                ViewBag.Title = "Home Page";
}

<div class="jumbotron alert alert-info">
    <h3>الهلال الذهبي لنقل الاثاث بالرياض</h3>
    <p >شركة الهلال الذهبي لنقل الاثات تعد من الشركات الرئدة في نقل الاثاث بالمملكة العربية السعودية</p>
    <p><a href="~/Home/About" class="btn btn-primary btn-lg">المزيد من التفاصيل.. &raquo;</a></p>
</div>
@foreach (var item in Model)
{<div class="panel panel-info">
    <div class="panel-heading"><h1>@Html.DisplayFor(modelItem => item.categName)</h1></div>
    <div class="row panel-body">
       
        <div class="row">
            @foreach (var subitem in item.jobs)
            {

                <div class="col-md-5 thumbnail" style="margin-left:20px ; margin-bottom:30px;height:600px;width: 568px">
                    <img src="~/Uploads/@subitem.jobimage" style="margin-left:20px ; margin-bottom:30px;height:400px;width: 568px"/>
                    <h3>@Html.DisplayFor(modelitem => subitem.jobtitl)</h3>
                    <h5>@Html.DisplayFor(modelItem => subitem.jobcontent)</h5>
                    @Html.ActionLink("عرض التفاصيل", "Details", new { jobid = subitem.id }, new { @class = "btn btn-primary" })
                </div>


            }
        </div>
    </div>
</div>
}
