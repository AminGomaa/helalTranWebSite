@model Helalzahbi_Trans.Models.Category

@{
    ViewBag.Title = "تعديل الخدمة";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>تعديل الخدمة</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)

        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.categName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.categName, "", new { @class = "text-danger" })
            </div>
            @Html.LabelFor(model => model.categName, htmlAttributes: new { @class = "control-label col-md-1" })

        </div>

       

        <div class="form-group">
            <div class="col-md-offset-1 col-md-9">
                <input type="submit" value="حفظ" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div class="col-md-offset-1 col-md-9">
    @Html.ActionLink("الرجوع للقائمة", "Index")
</div>
